}
.banner {
  height: 685rpx;
  background-color: #f90;
}
.snap {
  height: 110rpx;
  background-color: RGB(254,163,43);
  display: flex;
  box-shadow:inset 200rpx 0  35rpx #feaf2b;
}



.swiper {
  width: 100%;
  height: 100%;
} 
.swiper-image {
  width: 100%;
  height: 100%;
}
.snap .left {
  width: 65%;
  height: 100%;
  
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
  color: #8d5700;
}
.snap .right{
  width: 35%;
  height: 100%;
  background-color: RGB(252,208,134);
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  text-align: right;
  font-size: 32rpx;
  color: RGB(156,97,14);
  justify-content: center;

}
.snap .price,.priceMax {
  width: 100%;
 
}
.snap .end,.end-date {
  height: 50%;
  display: flex;
  align-items: center;
}
.price text{
  font-size: 28rpx;
}

.priceMax {
  width: 250rpx;
  height: 50rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(230,157,39,.8);
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
}
.end-date {
  color: #fff;

}



.instructions {
  /* height: 196rpx; */
  padding: 50rpx 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 20rpx solid RGB(243,243,243);

}
.inst-left {
   width:70%;
  
}
.inst-text {
  font-size:34rpx;
  color:RGB(54,54,55);
  font-weight:900;

}
.yunfei {
  font-size: 28rpx;
  color: RGB(114,114,115);
}

.shoucang {
  /* width: 30rpx; */

  font-size:26rpx;
  color: #b7b7b7;
}

.bargaining {
  
  padding: 0 20rpx 20rpx 20rpx;
}
.title {
  height: 60rpx;
  line-height: 60rpx;
  
  border-bottom: 1rpx solid RGB(241,241,241);
  font-size: 28rpx;
}

.shuming {
  width: 100%;
  height: 350rpx;
  border-bottom: 20rpx solid RGB(243,243,243);

}
.shuming image {
  width: 100%;

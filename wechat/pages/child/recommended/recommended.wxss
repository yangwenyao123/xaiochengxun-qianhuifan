}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;

  width: 100%;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.footer-left {
 
  width: 40%;
  display: flex;
  justify-content: space-between; 
  align-items: center;
  
}
.shouye,.zixun {
  text-align: center;
  width: 50%;
  font-size: 26rpx;
  
}
.footer-btn {
  width: 60%;
  line-height: 100rpx;
  text-align: center;
  background-color: RGB(252,131,47);
  font-size:35rpx;
  box-shadow:inset 100rpx 0  70rpx RGB(254,180,48);
  color: #fff;
}


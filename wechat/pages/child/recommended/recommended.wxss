}
.details .title {
  height: 100rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;

  flex-direction: column;
  color: RGB(60,60,60);
}
.border {
  width: 25rpx;
  height: 5rpx;
  background-color: RGB(246,128,61);

}
.details {
  /* height: 1000rpx; */

/* pages/child/integral/integral.wxss */
.content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f2f2f3
}
.banner {
  height: 260rpx;
  background-color: #fe8b2b;
  position: relative;

}
.banner image {
  width: 100%;
  height: 100%;
}
.midel {
  width: 200rpx;
  height: 260rpx;

  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.num {
  text-align: center;
  height:72rpx;
  line-height: 72rpx;
  color: #fff;
  font-weight: 600;
}
.btn {
  width:180rpx;
  height:72rpx;
  background:#fcfffe;
  border-radius:20rpx;
  text-align: center;
  line-height: 72rpx;
  color: #d78b57;
  font-size:36rpx;
}

.tab {
  height: 150rpx;
  padding: 20rpx 0;
  display: flex;
  color: #3f3d3b;
  font-size: 32rpx;
  background-color: #fff;
}
.tab .left{
  flex: 1;
  height: 100%;
  border-right: 2rpx solid #ececec;
  
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  
}
.tab .right{
  flex: 1;
  height: 100%;

  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.img{
  width: 80rpx;
  height: 80rpx;
  margin-bottom:10rpx;

}
.left  .img{
  width: 60rpx;
  height: 60rpx;
  margin-bottom:28rpx;

}
.img image {
  width: 100%;
  height: 100%;
}

.list {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  position: absolute;
  bottom: 140rpx;
  left: 50%;
  margin-left: -150rpx;

}

.mx-img {
  width: 100%;
  height: 100%;
  

}
.mx-img image {
  width: 100%;
  height: 100%;
}
.list  .text {
  text-align: center;
  color: #737373;
}
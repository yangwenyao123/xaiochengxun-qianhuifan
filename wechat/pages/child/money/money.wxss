/* pages/child/money/money.wxss */
.content{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background-color: #f2f2f2;
}
.header {
  height:54rpx;
  line-height:54rpx;
  background-color:#d0d7dd;
  font-size:26rpx;
  padding-left:20rpx;
  color: #4a4f50;

}
.list {
  background-color: #f2f2f2;
  padding: 20rpx;
  
}

.card {
  width: 100%;
  height: 266rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  
  position: relative;
  margin-bottom: 20rpx;
}
.card-top {
  width: 100%;
  height: 50%;
  background-color: #fea333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
}

.card-bottom {
  width: 100%;
  height: 50%;
  background-color:#ffab4c;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 20rpx;
}
.card-bottom .right {
  width: 52px;
  font-size: 24rpx;
  color: #f7f4e8;
  margin-right:15rpx;
   
  
}
.card-top .right button {
  width:140rpx;
  height:60rpx;
  font-size:26rpx;
  line-height:60rpx;
  text-align:center;
  border-radius:52rpx;
  margin-right:15rpx;


}
.ewm {
  width:70rpx;
  height:70rpx;
  margin-left:30rpx;

}

.left {
  font-size:28rpx;
  color: #fff;
  padding-left:24rpx;


}
.left text {
  font-size:36rpx;

}
.iconjiantou {
  margin-left: 10rpx;
  font-size:28rpx !important;
}
.left-radius {
  width:30rpx;
  height:30rpx;
  border-radius:50%;
  background-color:rgb(242, 242, 242);
  position:absolute;
  left:5rpx;
  top:50%;
  margin-top:-15rpx;


}
.right-radius {
  width:30rpx;
  height:30rpx;
  border-radius:50%;
  background-color:rgb(242, 242, 242);
  position:absolute;
  right:5rpx;
  top:50%;
  margin-top:-15rpx;
  border-style:none;
}

.group {
  padding: 30rpx 45rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 20rpx;
}

.item {
  width: 160rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}
.item .img{
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 15rpx;
}
.item image{
  width: 100%;
  height: 100%;
}
.text {
  text-align: center;
  font-size: 26rpx;
  color: #787878;
}